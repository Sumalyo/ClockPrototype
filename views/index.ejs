<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Minimalist Clock with Weather & Background</title>
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: 'Roboto Mono', monospace;
      color: #fff;
      background: url('<%= backgroundUrl %>') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .overlay {
      background: rgba(0, 0, 0, 0.5);
      padding: 20px 40px;
      border-radius: 8px;
    }
    .clock {
      font-size: 3em;
    }
    .weather {
      margin-top: 10px;
      font-size: 1.2em;
    }
    .refresh-btn {
      margin-top: 20px;
      padding: 10px 20px;
      background: transparent;
      border: 1px solid #fff;
      border-radius: 4px;
      color: #fff;
      cursor: pointer;
    }
    .refresh-btn:hover {
      background: rgba(255,255,255,0.2);
    }
    @media (max-width: 600px) {
      .clock {
        font-size: 2em;
      }
      .weather {
        font-size: 1em;
      }
    }
  </style>
</head>
<body>
  <div class="overlay">
    <div class="clock" id="clock">00:00:00</div>
    <% if (weather) { %>
      <div class="weather" id="weather"><%= weather.city %>: <%= weather.temp %>°C, <%= weather.description %></div>
    <% } %>
    <button class="refresh-btn" id="refreshBtn">Refresh</button>
  </div>
  
  <script>
    // Update the clock every second
    function updateClock() {
      const clockEl = document.getElementById('clock');
      const now = new Date();
      const hours = now.getHours().toString().padStart(2, '0');
      const minutes = now.getMinutes().toString().padStart(2, '0');
      const seconds = now.getSeconds().toString().padStart(2, '0');
      clockEl.textContent = `${hours}:${minutes}:${seconds}`;
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Refresh background and weather info when button is clicked
    document.getElementById('refreshBtn').addEventListener('click', function() {
      fetch('/refresh', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          // Update the background image
          document.body.style.backgroundImage = `url('${data.background_url}')`;
          // Update the weather info
          const weatherEl = document.getElementById('weather');
          if (data.weather) {
            weatherEl.textContent = `${data.weather.city}: ${data.weather.temp}°C, ${data.weather.description}`;
          }
        })
        .catch(error => console.error('Error:', error));
    });
  </script>
</body>
</html>
